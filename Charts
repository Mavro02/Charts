    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Gen', 'Feb', 'Mar', 'Apr', 'Mag', 'Giu'],
                datasets: [{
                    label: 'Vendite',
                    data: [10, 20, 30, 40, 50, 60],
                    borderColor: 'blue',
                    borderWidth: 2
                }]
            }
        });
    </script>
